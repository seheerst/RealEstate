@model UpdateBottomGridDto
@{
    ViewData["Title"] = "UpdateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12 mt-4">
    <div class="bg-light rounded h-100 p-4 mx-4">
        <h1 class="text-primary">Çalışan Bilgilerini Güncelle</h1>
        <form action="UpdateBottomGrid" method="post">
            <input type="hidden" asp-for="BottomGridID" />
            <div class=" mb-3">
                <label>Başlık</label>
                <input asp-for="Title" class="form-control" />
            </div>    
            <div class=" mb-3">
                <label>İkon</label>
                <input asp-for="Icon" class="form-control" />
            </div>
            <div class=" mb-3">
                <label>İçerik</label>
                <textarea asp-for="Content" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-outline-primary">Kaydet</button>
        </form>
    </div>
</div>


