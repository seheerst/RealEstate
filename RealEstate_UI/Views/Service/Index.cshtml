@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;

}

<div class="col-11 mt-4 mx-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Hizmetler</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Hizmet Adı</th>
                        <th scope="col">Durum</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.ServiceName</td>
                            <td>@item.ServiceStatus</td>
                            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-primary">Güncelle</a></td>
                        </tr>
                    }

                </tbody>

            </table>
            <a href="/Service/CreateService" class="btn btn-outline-info">Yeni Hizmet Ekle</a>
        </div>
    </div>
</div>

