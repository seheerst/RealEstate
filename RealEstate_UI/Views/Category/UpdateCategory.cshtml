@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12 mt-4">
    <div class="bg-light rounded h-100 p-4 mx-4">
        <h1 class="text-primary">Kategori Güncelle</h1>
        <form action="UpdateCategory" method="post">
            <input type="hidden" asp-for="CategoryID" />
            <div class=" mb-3">
                <label>Kategori Adı</label>
                <input asp-for="CategoryName" class="form-control" />
            </div>
            <div class=" mb-3">
                <label>Kategori Durumu</label>
                <input asp-for="CategoryStatus" class="form-check" />
            </div>
            <button type="submit" class="btn btn-outline-primary">Kaydet</button>
        </form>
    </div>
</div>

