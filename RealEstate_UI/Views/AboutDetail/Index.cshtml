@model List<ResultAboutDetailDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    var count = 0;
}

<div class="col-11 mt-4 mx-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Biz Kimiz?</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Alt Başlık</th>
                        <th scope="col">İçerik 1</th>
                        <th scope="col">İçerik 2</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <th>@item.Title</th>
                            <td>@item.SubTitle</td>
                            <td>@item.Description1</td>
                            <td>@item.Description2</td>

                            <td><a href="/AboutDetail/DeleteAboutDetail/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/AboutDetail/UpdateAboutDetail/@item.AboutID" class="btn btn-outline-primary">Güncelle</a></td>
                        </tr>
                    }

                </tbody>

            </table>
            <a href="/AboutDetail/CreateAboutDetail" class="btn btn-outline-info">Yeni Bilgi Ekle</a>
        </div>
    </div>
</div>

