@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="col-11 mt-4 mx-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Çalışan Listesi</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">İsim Soyisim</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">E-Posta</th>
                        <th scope="col">Telefon Numarası</th>
                        <th scope="col">Durum</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.EmployeeID</th>
                            <td>@item.Name</td>
                            <td>@item.Title</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Status</td>
                            <td><a href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Employee/UpdateEmployee/@item.EmployeeID" class="btn btn-outline-primary">Güncelle</a></td>
                        </tr>
                    }

                </tbody>

            </table>
            <a href="/Employee/CreateEmployee" class="btn btn-outline-info">Yeni Çalışan Ekle</a>
        </div>
    </div>
</div>

