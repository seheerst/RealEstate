@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-11 mt-4 mx-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">İlan Listesi</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">İlan Başlığı</th>
                        <th scope="col">Şehir</th>
                        <th scope="col">İlçe</th>
                        <th scope="col">Kategori</th>
                        <th scope="col">Fiyat</th>
                        <th scope="col">Tür</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                        <th scope="col">Sitede Gör</th>
                        <th scope="col">Günün Fırsatı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.productID</th>
                            <td>@item.title</td>
                            <td>@item.city</td>
                            <td>@item.district</td>
                            <td>@item.categoryName</td>
                            <td>@item.price</td>
                            <td>@item.type</td>
                            
                            <td><a href="/Product/DeleteProduct/@item.productID" class="btn btn-outline-danger btn-sm">Sil</a></td>
                            <td><a href="/Product/UpdateProduct/@item.productID" class="btn btn-outline-primary btn-sm">Güncelle</a></td>
                            <td>
                                @if(item.DealOfTheDay == true)
                                {
                                    <a href="/Product/UpdateProduct/@item.productID" class="btn btn-outline-success btn-sm">Pasif Yap</a>
                                }
                                @if (item.DealOfTheDay == false)
                                {
                                    <a href="/Product/UpdateProduct/@item.productID" class="btn btn-outline-success btn-sm">Aktif Yap</a>

                                }

                            </td>
                            <td><a href="/Product/ProductDetail/@item.productID" class="btn btn-outline-secondary btn-sm">Sitede Gör</a></td>
                        </tr>
                    }

                </tbody>

            </table>
            <a href="/Product/CreateProduct" class="btn btn-outline-info">Yeni İlan Ekle</a>
        </div>
    </div>
</div>


