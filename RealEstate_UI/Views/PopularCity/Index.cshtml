@model List<ResultPopulerCityDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}
<style>
    img{
        border-radius:50%;
        height:50px;
        width:50px;
    }
</style>

<div class="col-11 mt-4 mx-4">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Popüler Şehirler</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Şehir Adı</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td><img src="@item.ImageUrl" />  @item.Title</td>
                            <td><a href="/PopularCity/DeletePopulerCity/@item.PopulerCityID" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/PopularCity/UpdatePopulerCity/@item.PopulerCityID" class="btn btn-outline-primary">Güncelle</a></td>
                        </tr>
                    }

                </tbody>

            </table>
            <a href="/PopularCity/CreatePopulerCity" class="btn btn-outline-info">Yeni Hizmet Ekle</a>
        </div>
    </div>
</div>